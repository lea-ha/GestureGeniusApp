<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_learn_mode"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".LearnModeActivity">

    <Button
        android:id="@+id/button_unit_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#2196F3"
        android:text="Unit 1"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/button_unit_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#2196F3"
        android:text="Unit 2"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_below="@+id/button_unit_1"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"/>

    <Button
        android:id="@+id/button_unit_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#2196F3"
        android:text="Unit 3"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_below="@+id/button_unit_2"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"/>

    <Button
        android:id="@+id/button_unit_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#2196F3"
        android:text="Unit 4"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_below="@+id/button_unit_3"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"/>

    <Button
        android:id="@+id/button_unit_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#2196F3"
        android:text="Unit 5"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_below="@+id/button_unit_4"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"/>

</RelativeLayout>
